.jq-selectbox
  width 100%

  &.focused .jq-selectbox__select
    border 2px solid #e8e8e8

  &.opened
    z-index 11 !important

    .jq-selectbox__trigger-arrow
      transform scaleY(-1)

  ul
    max-height 360px

  li
    color #7a7a7a
    font-family Roboto
    font-size 14px
    line-height 18px
    font-weight 300
    border none
    white-space normal
    padding 17px 15px 16px
    white-space nowrap
    cursor pointer

    &.selected.sel, &.selected, &:hover
      background-color #fef1f1
      color #7a7a7a

    & + li
      margin-top 0

    &:before
      display none
      content none

  &__select
    height 56px
    line-height 52px
    padding-left 0
    position relative
    height 56px
    background white
    border 2px solid #e8e8e8
    border-radius 3px
    box-shadow none
    width 100%
    padding-right 36px
    min-width auto
    padding-top 0

    &-text
      height 52px
      color #7a7a7a
      font-size 14px
      line-height 52px
      font-weight 300
      padding 0 0 0 15px
      box-sizing border-box
      max-width 100%
      width 100% !important
      text-overflow ellipsis
      white-space nowrap
      overflow hidden

    &:hover, &:active
      background #fff

    &:active
      box-shadow none

  &__trigger
    position absolute
    top 0
    right 0
    width 36px
    height 100%
    border-left none

    &-arrow
      width 13px
      height 6px
      position absolute
      top 22px
      right 20px
      border none

      &:before
        @extend .before
        width 0
        height 0
        border-style solid
        border-width 6px 6px 0 6px
        border-color #ef1a0b transparent transparent transparent

  &__dropdown
    font-family Roboto
    top 60px !important
    background-color white
    border 2px solid #e8e8e8
    border-radius 3px
    box-shadow none
    padding 0
    min-width 100%
    max-width none
    margin 0
    width auto !important
    overflow hidden
