.form
  &__row
    margin-bottom 13px

    &:last-child
      margin-bottom 0

  &__field
    &-label
      display block
      margin-bottom 8px
      color #161515
      font-size 16px
      font-weight 400
      line-height 20px

    &-input
      display block
      width 100%
      height 56px
      background-color white
      border 2px solid #bebebe
      border-radius 4px
      outline none
      padding 15px 22px
      color #222
      font-family Roboto
      font-size 14px
      font-weight 400
      transition border .4s

      &.warning
        border-color red

      &::-webkit-input-placeholder
        color #222
        font-family Roboto
        font-size 14px
        line-height 18px
        font-weight 100

      &::-moz-placeholder
        color #222
        font-family Roboto
        font-size 14px
        line-height 18px
        font-weight 100

      &:-ms-input-placeholder
        color #222
        font-family Roboto
        font-size 14px
        line-height 18px
        font-weight 100

      &:-moz-placeholder
        color #222
        font-family Roboto
        font-size 14px
        line-height 18px
        font-weight 100

    &-textarea
      display block
      width 100%
      height 139px
      resize none
      background-color white
      border 2px solid #bebebe
      border-radius 4px
      outline none
      padding 15px 20px
      color #222
      font-family Roboto
      font-size 14px
      line-height 18px
      font-weight 400
      transition border .4s

      &.warning
        border-color red

      &::-webkit-input-placeholder
        color #222
        font-family Roboto
        font-size 14px
        line-height 18px
        font-weight 100

      &::-moz-placeholder
        color #222
        font-family Roboto
        font-size 14px
        line-height 18px
        font-weight 100

      &:-ms-input-placeholder
        color #222
        font-family Roboto
        font-size 14px
        line-height 18px
        font-weight 100

      &:-moz-placeholder
        color #222
        font-family Roboto
        font-size 14px
        line-height 18px
        font-weight 100
