.checkbox
    display inline-block
    vertical-align top
    position relative
    text-align left

    &.warning
        .checkbox__label:before
            border-color red

    &__input
        position absolute
        left -9999px
        opacity 0

        &:checked + .checkbox__label
            &:before
                border-color #edcc88
                background-color #edcc88
                
            &:after
                opacity 1

    &__label
        display inline-block
        vertical-align top
        width 100%
        color #151515
        font-size 12px
        font-weight 400
        line-height 18px
        padding-left 36px
        cursor pointer
        transition all .3s
        
        &:before
            content ""
            width 18px
            height 18px
            background-color #fff
            border 1px solid #e4e5eb
            position absolute
            left 0
            top -1px
            cursor pointer
            transition all .3s

        &:after
            content ""
            position absolute
            width 9px
            height 4px
            border-left 2px solid #fff
            border-bottom 2px solid #fff
            left 4px
            top 5px
            opacity 0
            cursor pointer
            transform rotate(-45deg)
            transition all .3s

        a 
            color #151515
            font-size 12px
            font-weight 400
            line-height 18px
            border-bottom 1px solid transparent
            transition all .3s

            &:hover
                border-bottom-color #edcc88