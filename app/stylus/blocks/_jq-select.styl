.jq-selectbox
    &.opened
        .jq-selectbox__trigger-arrow
            transform scaleY(-1)
            
    ul
        padding 8px 0
    
    li
        position relative
        color #1c1c1c
        font-family OpenSans
        font-size 15px
        font-weight 400
        line-height 18px
        border none
        white-space normal
        padding 10px 20px 12px 36px
        cursor pointer
        
        &:first-child
            border-top 0

        &:hover, &.selected
            background-color #ffcb81
            color #1c1c1c

        & + li
            margin-top 0

        &:before
            position absolute
            left 13px
            top 15px
            width 10px
            height 4px
            border-left 2px solid #000
            border-bottom 2px solid #000
            transform rotate(-45deg)
            
        &.sel
            &:before
                content ''
                display block

    &__select
        border 1px solid #d6d9db
        height 40px
        line-height 38px
        padding-left 10px
        position relative
        background none
        border-radius 4px
        box-shadow none
        width 100%
        padding-right 35px
        min-width 61px
        padding-top 0

        &-text
            height 38px
            color #1c1c1c
            font-family OpenSans
            font-size 15px
            font-weight 400
            line-height 38px
            padding 0 4px
            padding-right 0
            box-sizing border-box
            max-width 100%
            width 100% !important
            text-overflow ellipsis
            white-space nowrap
            overflow hidden

        &:hover, &:active
            background #fff

        &:active
            box-shadow none

    &__trigger
        position absolute
        top 0
        right 0
        width 30px
        height 100%
        border-left none

        &-arrow
            width 17px
            height 15px
            position absolute
            top 13px
            right 12px
            border none

            &:before
                content ''
                display block
                position absolute
                top 1px
                left 5px
                width 6px
                height 6px
                border-left 2px solid #444
                border-bottom 2px solid #444
                transform rotate(-45deg)
                background none

    &__dropdown
        font-family OpenSans
        top 44px !important
        background-color #fff
        border-radius 0
        border 1px solid #d6d9db
        box-shadow 0 8px 16px rgba(0, 0, 0, 0.16)
        padding 0
        min-width 61px
        max-width none
        margin 0
        width auto
        overflow hidden

.jq-selectbox.focused
    .jq-selectbox__select
        border 1px solid #d6d9db