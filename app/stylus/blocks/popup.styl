.popup
  position relative
  width 100%
  max-width 474px
  margin 35px auto
  background-color #fefefe
  border-radius 4px
  padding 80px 42px 40px
  overflow hidden
  z-index 1

  @media $mPortraitMax
    padding 65px 20px 30px

  &:before
    @extend .before
    left 0
    top 0
    width 100%
    height 32px
    background-color #222
    z-index -1

  .form
    &__row
      margin-bottom 35px

      &:last-child
        margin-bottom 0

    &__field
      width 100%

      &-submit
        width 100%

  &__title
    color #161515
    font-size 30px
    line-height 36px
    font-weight 500

    @media $mPortraitMax
      font-size 22px
      line-height 26px

  &__text
    color #161515
    font-size 16px
    line-height 20px
    font-weight 300
    margin-top 25px

    @media $mPortraitMax
      font-size 14px
      line-height 18px

    b
      font-weight 500

  &__content
    margin-top 40px

    @media $mPortraitMax
      margin-top 20px

